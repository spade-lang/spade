pub trait PartialOrd<Rhs = Self>: PartialEq<Rhs> {
    fn lt(self, rhs: Rhs) -> bool;
    fn le(self, rhs: Rhs) -> bool;
    fn gt(self, rhs: Rhs) -> bool;
    fn ge(self, rhs: Rhs) -> bool;
}

