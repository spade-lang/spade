    #[inline]
    fn lt(self, rhs: Self) -> bool {
        intrinsics::lt(self, rhs)
    }

    #[inline]
    fn le(self, rhs: Self) -> bool {
        intrinsics::le(self, rhs)
    }

    #[inline]
    fn gt(self, rhs: Self) -> bool {
        intrinsics::gt(self, rhs)
    }

    #[inline]
    fn ge(self, rhs: Self) -> bool {
        intrinsics::ge(self, rhs)
    }
}

